<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="34dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_linear"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_button"
        android:text="1"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/linear_layout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_linear"
        android:text="Linear Layout"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_relative"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_button"
        android:layout_toRightOf="@id/linear_layout"
        android:text="2"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/relative_layout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_relative"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/linear_layout"
        android:gravity="center_horizontal"
        android:text="Relative Layout"
        android:textSize="14dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_constraint"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/btn_relative"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_button"
        android:text="3"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/constraint_layout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/relative_layout"
        android:layout_below="@id/btn_constraint"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:text="Constraint Layout"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_frame"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/linear_layout"
        android:background="@drawable/rounded_button"
        android:text="4"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/frame_layout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_frame"
        android:text="Frame Layout"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_table"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/relative_layout"
        android:layout_toRightOf="@id/btn_frame"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_button"
        android:text="5"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/table_layout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_table"
        android:layout_toRightOf="@id/frame_layout"
        android:layout_marginLeft="20dp"
        android:text="Table Layout"
        android:textSize="14dp"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_materialDesign"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/constraint_layout"
        android:layout_toRightOf="@id/btn_table"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_button"
        android:text="6"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/material_Design"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_materialDesign"
        android:layout_toRightOf="@id/table_layout"
        android:layout_marginLeft="20dp"
        android:text="Material Design"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_scrollView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/frame_layout"
        android:background="@drawable/rounded_button"
        android:text="7"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/scroll_View"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_scrollView"
        android:text="Scroll View"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_scrollViewHorizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/table_layout"
        android:layout_toRightOf="@id/btn_scrollView"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_button"
        android:text="8"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/Scroll_ViewHorizontal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/btn_scrollViewHorizontal"
        android:layout_toRightOf="@id/scroll_View"
        android:layout_marginLeft="20dp"
        android:text="Scroll View Horizontal"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

</RelativeLayout>